{
  "name": "@drincs/pixi-vn",
  "version": "1.3.25",
  "type": "module",
  "description": "Pixi'VN is a npm package that provides various features for creating visual novels.",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build:unifier": "tsup --config tsup.unifier.config.ts",
    "build:pixi-js": "tsup --config tsup.pixi-js.config.ts",
    "build:submodules": "tsup --config tsup.submodules.config.ts",
    "build:index": "tsup --config tsup.config.ts",
    "build": "npm run build:pixi-js && npm run build:unifier && npm run build:submodules && npm run build:index",
    "test": "vitest"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs",
      "default": "./dist/index.mjs"
    },
    "./pixi.js": {
      "types": "./dist/pixi.js.d.ts",
      "import": "./dist/pixi.js.mjs",
      "require": "./dist/pixi.js.cjs",
      "default": "./dist/pixi.js.mjs"
    },
    "./unifier": {
      "types": "./dist/unifier.d.ts",
      "import": "./dist/unifier.mjs",
      "require": "./dist/unifier.cjs",
      "default": "./dist/unifier.mjs"
    },
    "./narration": {
      "types": "./dist/narration.d.ts",
      "import": "./dist/narration.mjs",
      "require": "./dist/narration.cjs",
      "default": "./dist/narration.mjs"
    },
    "./history": {
      "types": "./dist/history.d.ts",
      "import": "./dist/history.mjs",
      "require": "./dist/history.cjs",
      "default": "./dist/history.mjs"
    },
    "./storage": {
      "types": "./dist/storage.d.ts",
      "import": "./dist/storage.mjs",
      "require": "./dist/storage.cjs",
      "default": "./dist/storage.mjs"
    },
    "./canvas": {
      "types": "./dist/canvas.d.ts",
      "import": "./dist/canvas.mjs",
      "require": "./dist/canvas.cjs",
      "default": "./dist/canvas.mjs"
    },
    "./sound": {
      "types": "./dist/sound.d.ts",
      "import": "./dist/sound.mjs",
      "require": "./dist/sound.cjs",
      "default": "./dist/sound.mjs"
    },
    "./characters": {
      "types": "./dist/characters.d.ts",
      "import": "./dist/characters.mjs",
      "require": "./dist/characters.cjs",
      "default": "./dist/characters.mjs"
    },
    "./vite": {
      "types": "./dist/vite.d.ts",
      "import": "./dist/vite.mjs",
      "require": "./dist/vite.cjs",
      "default": "./dist/vite.mjs"
    },
    "./vite-listener": {
      "types": "./dist/vite-listener.d.ts",
      "import": "./dist/vite-listener.mjs",
      "require": "./dist/vite-listener.cjs",
      "default": "./dist/vite-listener.mjs"
    }
  },
  "typesVersions": {
    "*": {
      "pixi.js": ["./dist/pixi.js.d.ts"],
      "unifier": ["./dist/unifier.d.ts"],
      "narration": ["./dist/narration.d.ts"],
      "history": ["./dist/history.d.ts"],
      "storage": ["./dist/storage.d.ts"],
      "canvas": ["./dist/canvas.d.ts"],
      "sound": ["./dist/sound.d.ts"],
      "characters": ["./dist/characters.d.ts"]
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DRincs-Productions/pixi-vn.git"
  },
  "author": "DRincs-Productions",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/DRincs-Productions/pixi-vn/issues"
  },
  "homepage": "https://pixi-vn.web.app/",
  "funding": "https://github.com/DRincs-Productions/pixi-vn?sponsor=1",
  "dependencies": {
    "@pixi/devtools": "^2.0.1",
    "@pixi/sound": "^6.0.1",
    "motion": "^12.23.13",
    "pixi.js": "^8.13.2"
  },
  "devDependencies": {
    "@types/crypto-js": "^4.2.2",
    "@types/deep-diff": "^1.0.5",
    "crypto-js": "^4.2.0",
    "deep-diff": "^1.0.2",
    "jsdom": "^27.0.0",
    "keyv": "^5.5.1",
    "lru-cache": "^11.2.1",
    "microdiff": "^1.5.0",
    "ts-node": "^10.9.2",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "keywords": [
    "2d",
    "canvas",
    "development",
    "engine",
    "game",
    "game-development",
    "game-engine",
    "games",
    "js",
    "novel",
    "pixi",
    "pixi-js",
    "visual",
    "visual-novel",
    "webgl"
  ]
}
